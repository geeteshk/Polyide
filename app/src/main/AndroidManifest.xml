<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.geeteshk.polyide">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.geeteshk.polyide.MainActivity" />
        </activity>
        <activity
            android:name=".CatalogActivity"
            android:label="@string/app_name"
            android:parentActivityName=".CreateActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.geeteshk.polyide.CreateActivity" />
        </activity>
        <activity
            android:name=".ElementsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".CatalogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.geeteshk.polyide.CatalogActivity" />
        </activity>
        <activity
            android:name=".SetupActivity"
            android:label="@string/app_name"
            android:parentActivityName=".CatalogActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="io.geeteshk.polyide.CatalogActivity" />
        </activity>
    </application>

</manifest>
