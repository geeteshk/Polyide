<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?android:attr/endColor"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/element_group_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:textColor="#95000000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/element_group_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#95000000"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/element_group_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/element_group_title"
            android:layout_marginTop="12dp"
            android:textColor="#95000000"
            android:textSize="16sp" />

        <View
            android:id="@+id/element_group_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/element_group_subtitle"
            android:layout_marginTop="8dp"
            android:background="#95000000" />

        <TextView
            android:id="@+id/element_group_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/element_group_divider"
            android:layout_marginTop="8dp"
            android:minHeight="32dp"
            android:textColor="#95000000"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>